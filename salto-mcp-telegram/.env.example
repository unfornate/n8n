# Telegram bot token issued by @BotFather
TELEGRAM_BOT_TOKEN=

# Optional bot username used in user-facing hints (include @ prefix, e.g. @SaltoAgentMCP_bot)
TELEGRAM_BOT_USERNAME=

# Optional comma separated list of chat IDs that are allowed to receive messages.
# Leave empty to allow any chat while testing locally.
ALLOWED_CHAT_IDS=

# Port to run the MCP server on
PORT=8787

# Optional bearer token for authenticating MCP clients (Authorization: Bearer <token>)
AUTH_BEARER=

# Allow simplified non JSON-RPC tool invocations for local debugging (true/false)
# Defaults to true in development and false in production when unset
ALLOW_LEGACY_BODY=
